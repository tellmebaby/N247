<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.first.mvc.BaseMapper">
 
 
  <select id="getCountId" resultType="integer">
    SELECT count(*) id FROM hong.iamkayList where id
  </select>
  
  <insert id="insertPost" parameterType="org.first.mvc.entity.Post">
    insert into hong.N247 (hong.N247.create,userId,postTitle,description,tabId,tabTitle,rePerson) values (now(),#{userId},#{postTitle},#{description},#{tabId},#{tabTitle},#{rePerson})
  </insert>
  
    <insert id="insertTab" parameterType="org.first.mvc.entity.Post">
    insert into hong.N247_tab (userId,tabTitle) values (#{userId},#{tabTitle})
  </insert>
  
  
  <select id="getPostList" resultType="org.first.mvc.entity.Post">
    select * from hong.N247 where userId = #{userId} order by id desc
  </select>
  
    <select id="getTabList" resultType="org.first.mvc.entity.Post">
    select * from hong.N247_tab where userId = #{userId} order by tabId desc
  </select>
  
</mapper>